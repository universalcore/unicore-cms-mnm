<div metal:use-macro="view.global_template"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="unicorecmsffl">
    <div metal:fill-slot="content">
        <div id="banner"><img src="/static/img/kids.jpg"></div>

        <div class="object-category-list modelbase-category-list" tal:condition="view.get_featured_pages()">
        <div class="h1">&nbsp;<span i18n:translate="latest">Latest</span><div class="clear"></div></div>
        <div class="items">
        <div class="box">
            <div class="item" tal:repeat="page view.get_featured_pages()">
                <div class="text">
                    <a href="/content/detail/${page.uuid}/">${page.title}</a>
                </div>
            </div>
        </div>
        </div>
        </div>

        <div class="object-category-list modelbase-category-list" tal:repeat="cat view.get_categories()">
        <div class="h1">
            <a href="/content/list/${cat.uuid}/"><img src="/static/img/icon-${cat.slug}.jpg">
              ${cat.title}
            </a>
            <div class="clear"></div>
        </div>
        <div class="items" tal:condition="view.get_featured_category_pages(cat.uuid)">
            <div class="box">
                <div class="item" tal:repeat="page view.get_featured_category_pages(cat.uuid)">
                    <div class="text">
                        <a href="/content/detail/${page.uuid}/">${page.title}</a>
                    </div>
                </div>
            <div class="pagi" tal:condition="view.get_featured_category_pages(cat.uuid)">
                <a href="/content/list/${cat.uuid}/"><span i18n:translate="more">More</span> ${cat.title}</a>
            </div>
            </div>
        </div>
        </div>

    </div>
</div>
